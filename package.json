{
  "name": "stableview-monorepo",
  "version": "0.1.0",
  "packageManager": "pnpm@10.14.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --filter=@stableview/app",
    "dev:admin": "turbo run dev --filter=@stableview/admin",
    "dev:core": "turbo run dev --filter=@stableview/core",
    "start:api": "turbo run start:api --filter=@stableview/core",
    "dev:api": "turbo run dev:api --filter=@stableview/core",
    "build": "turbo run build",
    "start": "turbo run start --filter=@stableview/app",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "dev:all": "turbo run dev --parallel",
    "build:watch": "turbo run build --watch",
    "turbo:clean": "turbo clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5",
    "webpack": "^5.101.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
