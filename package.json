{
  "name": "stableview-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @stableview/app dev",
    "dev:admin": "pnpm --filter @stableview/admin dev",
    "dev:core": "pnpm --filter @stableview/core dev",
    "start:api": "pnpm --filter @stableview/core start:api",
    "dev:api": "pnpm --filter @stableview/core dev:api",
    "build": "pnpm -r build",
    "start": "pnpm --filter @stableview/app start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5",
    "webpack": "^5.101.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
