{
  "buildCommand": "yarn build",
  "outputDirectory": "dist",
  "framework": null,
  "installCommand": "yarn install",
  "devCommand": "yarn dev:api",
  "functions": {
    "api/[...slug].ts": {
      "maxDuration": 30
    },
    "api/cron/update-metrics.ts": {
      "maxDuration": 300
    },
    "api/cron/update-prices.ts": {
      "maxDuration": 300
    },
    "api/cron/update-peg-prices.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-metrics",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/update-prices",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/update-peg-prices",
      "schedule": "*/30 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/[...slug]"
    },
    {
      "source": "/health",
      "destination": "/api/[...slug]"
    }
  ]
}
